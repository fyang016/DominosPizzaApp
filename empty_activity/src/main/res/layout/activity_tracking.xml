<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.os.operando.emptyactivity.Tracking"
    android:orientation="vertical"
    android:screenOrientation="portrait">

    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/Loading0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Placed"
        android:layout_below="@+id/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/Loading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preparing Order"
        android:layout_below="@+id/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/Loading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baking Pizza"
        android:layout_below="@+id/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/Loading3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivering Pizza"
        android:layout_below="@+id/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/Loading4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your pizza should be delivered."
        android:layout_below="@+id/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:visibility="invisible"
        />
</RelativeLayout>