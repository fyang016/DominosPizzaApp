<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.os.operando.emptyactivity.CreateAccount"
    tools:showIn="@layout/activity_create_account">
    <EditText
        android:id="@+id/editTextFN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="Name"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="38dp"
        />

    <EditText
        android:id="@+id/editTextLN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="Name"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="29dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextFN" />

    <EditText
        android:id="@+id/editTextPN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10dp"
        android:inputType="phone"
        android:hint = "Phone Number"
        tools:layout_editor_absoluteX="29dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextLN" />

    <EditText
        android:id="@+id/editTextE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint = "Email Address"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPN"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="29dp" />
    <EditText
        android:id="@+id/editTextE2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint = "Confirm Email Address"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextE"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="29dp" />

    <EditText
        android:id="@+id/editTextPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextE2"
        tools:layout_editor_absoluteX="29dp" />

    <EditText
        android:id="@+id/editTextPW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="29dp"
        android:hint = "Confirm Password"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPW" />

    <Button
        android:id="@+id/button2"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="Create Profile"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPW2"
        android:layout_margin="10dp"
        android:onClick="onCreateClick"/>

</android.support.constraint.ConstraintLayout>
